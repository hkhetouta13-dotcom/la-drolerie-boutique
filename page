    <!-- Scripts -->
    <script>
        // Navigation intelligente
        function showPage(pageId) {
            // Cacher toutes les pages
            document.querySelectorAll('.page-content').forEach(p => p.classList.remove('active'));
            // Afficher la page cible
            document.getElementById('page-' + pageId).classList.add('active');
            // Remonter en haut
            window.scrollTo(0, 0);
        }

        const toys = [
            { id: 1, name: "Château Fort", price: 89, img: "https://images.unsplash.com/photo-1533234998069-3c998f48467e?auto=format&fit=crop&q=80&w=400" },
            { id: 2, name: "Draisienne", price: 120, img: "https://images.unsplash.com/photo-1595188737299-c89b788c005f?auto=format&fit=crop&q=80&w=400" },
            { id: 3, name: "Maison Bois", price: 145, img: "https://images.unsplash.com/photo-1516627145497-ae6968895b74?auto=format&fit=crop&q=80&w=400" },
            { id: 4, name: "Xylophone", price: 34, img: "https://images.unsplash.com/photo-1610486524364-79357599052b?auto=format&fit=crop&q=80&w=400" }
        ];

        function renderProducts() {
            const grid = document.getElementById('product-grid');
            grid.innerHTML = toys.map(t => `
                <div class="bg-white rounded-3xl p-4 shadow-sm border border-slate-50">
                    <img src="${t.img}" class="w-full h-48 object-cover rounded-2xl mb-4">
                    <h3 class="font-bold text-marine uppercase text-sm">${t.name}</h3>
                    <p class="text-yellow-600 font-black">${t.price}€</p>
                    <button class="w-full mt-4 bg-slate-900 text-white py-2 rounded-lg text-[10px] font-bold uppercase">Ajouter</button>
                </div>
            `).join('');
        }

        window.onload = renderProducts;
    </script>
</body>
</html>
